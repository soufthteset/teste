local OrionLib = loadstring(game:HttpGet(('https://raw.githubusercontent.com/soufthteset/teste/refs/heads/main/sourcee')))()
local Window = OrionLib:MakeWindow({Name = "SOUFTH MENU üïã", HidePremium = false, SaveConfig = true, ConfigFolder = "TestConfig"})

-- Aba ESP/Aim
local Tab1 = Window:MakeTab({
    Name = "ESP/Aim",
    Icon = "rbxassetid://4483345998",
    PremiumOnly = false
})

local espEnabled = false
local espLines = {}
local espBillboards = {}
local mainColor = Color3.new(1, 0, 0) -- Main Color para ESP
local espRadius = 500
local showDistance = false

-- Fun√ß√£o de notifica√ß√£o
local function createInfoBox(funcName, status)
    game:GetService("StarterGui"):SetCore("SendNotification", {
        Title = funcName,
        Text = status,
        Duration = 5
    })
end

-- Fun√ß√£o para alternar ESP
local function toggleESP()
    espEnabled = not espEnabled
    if espEnabled then
        local localPlayer = game.Players.LocalPlayer
        local localCharacter = localPlayer.Character or localPlayer.CharacterAdded:Wait()
        for _, player in pairs(game.Players:GetPlayers()) do
            if player ~= localPlayer and player.Character and player.Character:FindFirstChild("HumanoidRootPart") then
                local line = Drawing.new("Line")
                line.Thickness = 1
                line.Color = mainColor
                line.Visible = true
                
                local billboard = Instance.new("BillboardGui", player.Character)
                billboard.Size = UDim2.new(0, 100, 0, 50)
                billboard.Adornee = player.Character:FindFirstChild("HumanoidRootPart")
                billboard.StudsOffset = Vector3.new(0, 3, 0)
                billboard.AlwaysOnTop = true
                
                local nameLabel = Instance.new("TextLabel", billboard)
                nameLabel.Size = UDim2.new(1, 0, 1, 0)
                nameLabel.Text = player.Name
                nameLabel.TextColor3 = Color3.new(1, 1, 1)
                nameLabel.BackgroundTransparency = 1
                nameLabel.Font = Enum.Font.SourceSansBold
                nameLabel.TextSize = 14
                
                espLines[player] = line
                espBillboards[player] = {billboard = billboard, nameLabel = nameLabel}
            end
        end
    else
        for _, line in pairs(espLines) do
            line:Remove()
        end
        for _, billboardData in pairs(espBillboards) do
            billboardData.billboard:Destroy()
        end
        espLines = {}
        espBillboards = {}
    end
    createInfoBox("ESP", "ESP ativado/desativado com sucesso!")
end

Tab1:AddButton({
    Name = "ESP Lines",
    Callback = function()
        toggleESP()
    end
})

Tab1:AddColorpicker({
    Name = "Main Color",
    Default = mainColor,
    Callback = function(color)
        mainColor = color
    end
})

-- Aba Misc
local TabMisc = Window:MakeTab({
    Name = "Misc",
    Icon = "rbxassetid://4483345998",
    PremiumOnly = false
})

-- Click Teleporte
TabMisc:AddButton({
    Name = "Click Teleporte",
    Callback = function()
        local mouse = game.Players.LocalPlayer:GetMouse()
        mouse.Button1Down:Connect(function()
            if mouse.Target then
                game.Players.LocalPlayer.Character:MoveTo(mouse.Hit.p)
            end
        end)
        createInfoBox("Click Teleporte", "Clique para teleportar ativado!")
    end
})

-- Teleporte para outro jogador
TabMisc:AddTextbox({
    Name = "Teleporte Player",
    Default = "",
    TextDisappear = true,
    Callback = function(playerName)
        local targetPlayer = game.Players:FindFirstChild(playerName)
        if targetPlayer and targetPlayer.Character then
            game.Players.LocalPlayer.Character:MoveTo(targetPlayer.Character.HumanoidRootPart.Position)
            createInfoBox("Teleporte Player", "Teleportado para " .. playerName .. "!")
        else
            createInfoBox("Teleporte Player", "Jogador n√£o encontrado!")
        end
    end
})

-- Sentar
TabMisc:AddButton({
    Name = "Sentar",
    Callback = function()
        game.Players.LocalPlayer.Character.Humanoid.Sit = true
    end
})

-- Deitar
TabMisc:AddButton({
    Name = "Deitar",
    Callback = function()
        game.Players.LocalPlayer.Character.Humanoid:ChangeState(Enum.HumanoidStateType.Physics)
    end
})

-- Remover Anima√ß√£o
TabMisc:AddButton({
    Name = "Sem Anima√ß√£o",
    Callback = function()
        local character = game.Players.LocalPlayer.Character
        for _, v in pairs(character.Humanoid:GetPlayingAnimationTracks()) do
            v:Stop()
        end
    end
})

-- Noclip
local noclip = false
TabMisc:AddToggle({
    Name = "Noclip",
    Default = false,
    Callback = function(state)
        noclip = state
        game:GetService("RunService").Stepped:Connect(function()
            if noclip then
                for _, part in pairs(game.Players.LocalPlayer.Character:GetChildren()) do
                    if part:IsA("BasePart") then
                        part.CanCollide = false
                    end
                end
            end
        end)
    end
})
